{
  "manifest_version": 3,
  "name": "JavaScript Injector",
  "description": "Injects user-defined scripts based on a site host.",
  "version": "1.0.0",
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "page": "/options/options.html",
    "open_in_tab": false
  },
  "web_accessible_resources": [
    {
      "matches": [
        "https://*/*"
      ],
      "resources": [
        "/scripts/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "/options/options-helper.js",
        "/content-script.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
