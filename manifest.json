{
  "manifest_version": 3,
  "name": "JavaScript Injector",
  "description": "Injects user-defined scripts based on a site host.",
  "version": "1.0.0",
  "permissions": [ "scripting", "storage" ],
  "host_permissions": [ "https://*/*" ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "matches": [ "https://*/*" ],
      "resources": [ "scripts/*" ]
    }
  ],
  "content_scripts": [
    {
      "matches": [ "https://*/*" ],
      "js": [ "content-script.js" ],
      "run_at": "document_idle"
    }
  ]
}
